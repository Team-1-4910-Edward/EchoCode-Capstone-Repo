{
  "name": "echo-code",
  "displayName": "Echo Code",
  "description": "Reads Python errors aloud using Pylint for visually impaired students and provides interactive coding tutorials.",
  "version": "1.1.0",
  "icon": "images/icon.png",
  "publisher": "EchoCode",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onSave",
    "onLanguageModel"
  ],
  "main": "./extension.js",
  "extensionDependencies": [
    "ms-python.python",
    "GitHub.copilot"
  ],
  "contributes": {
    "commands": [
      {
        "command": "echocode.readErrors",
        "title": "Read Python Errors Aloud"
      },
      {
        "command": "echocode.annotate",
        "title": "Toggle EchoCode Annotations",
        "icon": "$(comment)"
      },
      {
        "command": "echocode.readAllErrors",
        "title": "Read All Python Errors Aloud"
      },
      {
        "command": "echocode.jumpToNextFunction",
        "title": "Jump to Next Function"
      },
      {
        "command": "echocode.jumpToPreviousFunction",
        "title": "Jump to Previous Function"
      },
      {
        "command": "echocode.summarizeClass",
        "title": "Summarize Current Class"
      },
      {
        "command": "echocode.summarizeFunction",
        "title": "Summarize Current Function"
      }
    ],
    "keybindings": [
      {
        "command": "echocode.speakNextAnnotation",
        "key": "ctrl+alt+s",
        "when": "editorTextFocus"
      },
      {
        "command": "echocode.annotate",
        "key": "ctrl+alt+a",
        "when": "editorTextFocus"
      },
      {
        "command": "echocode.readAllAnnotations",
        "key": "ctrl+alt+q",
        "when": "editorTextFocus"
      },
      {
        "command": "echocode.jumpToNextFunction",
        "key": "ctrl+alt+down",
        "when": "editorTextFocus"
      },
      {
        "command": "echocode.jumpToPreviousFunction",
        "key": "ctrl+alt+up",
        "when": "editorTextFocus"
      },
      {
        "command": "echocode.summarizeClass",
        "key": "ctrl+alt+space C",
        "when": "editorTextFocus && editorLangId == 'python'"
      },
      {
        "command": "echocode.summarizeFunction",
        "key": "ctrl+alt+space F",
        "when": "editorTextFocus && editorLangId == 'python'"
      },
      {
        "command": "echocode.summarizeProgram",
        "key": "ctrl+alt+space P",
        "when": "editorTextFocus && editorLangId == 'python'"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "echocode.annotate",
          "group": "navigation"
        }
      ]
    },
    "chatParticipants": [
      {
        "id": "echocode.tutor",
        "fullName": "EchoCode Tutor",
        "name": "tutor",
        "description": "What can I teach you?",
        "isSticky": true,
        "commands": [
          {
            "name": "exercise",
            "description": "Provide exercises to practice a concept."
          }
        ]
      }
    ]
  },
  "scripts": {
    "lint-python": "pylint **/*.py",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^9.13.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0"
  },
  "dependencies": {
    "audio-loader": "^1.0.3",
    "audio-play": "^2.3.1",
    "node-aplay": "^1.0.3",
    "play-sound": "^1.1.6",
    "axios": "^1.8.3",
    "dotenv": "^16.4.7",
    "say": "^0.16.0"
  }
}