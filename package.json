{
  "name": "echo-code",
  "displayName": "Echo Code",
  "description": "Reads Python errors aloud using Pylint for visually impaired students.",
  "version": "1.0.0",
  "publisher": "Slitchie",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onSave"
  ],
  "main": "./extension.js",
  "extensionDependencies": [
    "ms-python.python"
  ],
  "contributes": {
    "commands": [
      {
        "command": "echocode.readErrors",
        "title": "Read Python Errors Aloud"
      },
      {
        "command": "code-tutor.annotate",
        "title": "Toggle Tutor Annotations",
        "icon": "$(comment)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "code-tutor.annotate",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint-python": "pylint **/*.py",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^9.13.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0"
  },
  "dependencies": {
    "say": "^0.16.0"
  }
}
