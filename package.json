{
  "name": "echo-code",
  "displayName": "Echo Code",
  "description": "Reads Python errors aloud using Pylint for visually impaired students.",
  "version": "1.0.0",
  "publisher": "Slitchie",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onSave"
  ],
  "main": "./extension.js",
  "extensionDependencies": [
    "ms-python.python"
  ],
  "contributes": {
    "commands": [
      {
        "command": "echocode.readErrors",
        "title": "Read Python Errors Aloud"
      }
    ],
    "keybindings": [
      {
        "command": "echocode.summarizeBlock",
        "key": "ctrl+alt+space B",
        "mac": "cmd+alt+space B",
        "when": "editorTextFocus && editorLangId == 'python'"
      },
      {
        "command": "echocode.summarizeFunction",
        "key": "ctrl+alt+space F",
        "mac": "cmd+alt+space F",
        "when": "editorTextFocus && editorLangId == 'python'"
      },
      {
        "command": "echocode.summarizeProgram",
        "key": "ctrl+alt+space P",
        "mac": "cmd+alt+space P",
        "when": "editorTextFocus && editorLangId == 'python'"
      }
    ]
  },
  "scripts": {
    "lint-python": "pylint **/*.py"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0"
  },
  "dependencies": {
    "axios": "^1.8.3",
    "dotenv": "^16.4.7",
    "say": "^0.16.0"
  }
}
